	body
		nav#ftco-navbar.navbar.navbar-expand-lg.navbar-dark.ftco_navbar.bg-dark.ftco-navbar-light.py-2
			.container
				a.navbar-brand(href='/')
					img#logo(src="/image/logo.svg" alt="No Images")
				button.navbar-toggler(type='button' data-toggle='collapse' data-target='#ftco-nav' aria-controls='ftco-nav' aria-expanded='false' aria-label='Toggle navigation')
					span.oi.oi-menu &nbsp;Menu
				#ftco-nav.collapse.navbar-collapse.justify-content-center
					ul.navbar-nav
						li#home.nav-item
							a.nav-link(href='/') Trang chủ
						li#products.nav-item
							a.nav-link(href='/products/load=scvH45jas') Danh sách
						li#news.nav-item
							a.nav-link(href='/news') Tin tức
						li#about.nav-item
							a.nav-link(href='/about') Về chúng tôi
						li.nav-item
							a.nav-link(href='#contact') Liên hệ
				.nav-login.d-flex.align-items-center.justify-content-between(style="transform: translateY(4px);")
					if(user)
						span.text
							span Xin chào, 
								each item in user 
									span(style="color: black;")= item.fullname
							span &nbsp;|&nbsp;
							span
							a(href="/logout") Đăng xuất
					else
						span.text
							span
								a(href="/register") Đăng ký
							span &nbsp;|&nbsp;
							span
							a(href="/auth/login") Đăng nhập
