extends ../layouts/index
block content
	.container
		.row
			.d-flex.justify-content-center.align-items-center.w-100
				.col-md-6
					h2.text-center Đăng ký
					p.text-center Vui lòng điền đầy đủ thông tin để tạo tài khoản.
					form(action="/register" method="POST")
						.from-group
							if(message)
								.alert.alert-success= message
						.form-group
							label(for="user")
								b Tài khoản
							input#user(type='text' name='user' placeholder='Nhập tên tài khoản' required)
						.form-group
							label(for='pass')
								b Mật khẩu
							input#pass(type='password' name='password' placeholder='Nhập mật khẩu' required)
						.form-group
							label(for="fullname") 
								b Tên
							input#pass(type='fullname' name='username' placeholder='Nhập tên' required)
						.form-group
							label(for="address") 
								b Địa chỉ
							input#pass(type="address" name='address' placeholder='Nhập địa chỉ' required)
						.form-group
							label(for='phone')
								b Số điện thoại
							input#pass(type='phone' name='phone' placeholder='Nhập số điện thoại' required)
						.form-group
							label(for='email')
								b Email
							input#pass(type='text' name='email' placeholder='Nhập email' required)
						.form-group
							.d-flex.justify-content-center.mb-4
								button.text-center.btn-signup(type='submit') Đăng ký
