extends ../admin/addproducts
block create
  main.mt-4
  .container-fluid
    .card.mb-4
      .card-header
        .row
          .col-sm-4.col-md-6
            i.fas.fa-table.mt-3
            span  Kiểu nhà
          .col-sm-8.col-md-6
            form(method="POST" name="myForm" onsubmit="return validateForm()")
      .card-body
        .table-responsive
          table#dataTable.table.table-bordered(width='100%' cellspacing='0')
            thead
              tr
                th Các kiểu nhà đã có
                th Tác vụ
            tbody
              each item in types
                tr
                  td= item.type
                  td
                    a(href="/admin/create/delete=" + item.id).btn.btn-danger Xóa