extends ../layouts/admin
block content
  .container-fluid
    // Page Heading
    h1.h3.mb-2.text-gray-800 Danh sách thông tin nhà
    // DataTales Example
    .card.shadow.mb-4
      .card-header.py-3
        .d-flex.justify-content-between.align-items-center
          h6.m-0.font-weight-bold.text-primary Bảng thông tin nhà
          a.btn.btn-primary(href="/admin/create/types") Thêm nhà
      .card-body
        .table-responsive
          table#dataTable.table.table-bordered(width='100%' cellspacing='0')
            thead
              tr
                th Tiêu đề
                th Loại Nhà
                th Phòng ngủ
                th Thông tin
                th Giá
                th Địa Chỉ
                th Tác vụ
            tfoot
              tr
                th Tiêu đề
                th Loại Nhà
                th Phòng ngủ
                th Thông tin
                th Giá
                th Địa Chỉ
                th Tác vụ
            tbody
              each seed in seeds
                tr
                  td= seed.name
                  td= seed.type
                  td= seed.furniture
                  td= seed.information
                  td= seed.price
                  td= seed.address
                  td
                    a(href="/admin/views/update="+ seed.id).btn.btn-success.mb-2 Sửa
                    a(href="/admin/views/delete="+ seed.id,).btn.btn-danger Xóa